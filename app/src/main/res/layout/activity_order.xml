<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abc"
    tools:context=".OrderActivity">

    <TextView
        android:layout_marginTop="75dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Name"
        />
    <EditText
        android:hint="Enter Your Name"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/name"
        android:id="@+id/getName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="250dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_below="@+id/getName"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Email"
        />

    <EditText
        android:hint="Enter Your Email"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/email"
        android:id="@+id/getEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="250dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_below="@+id/getEmail"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Phone Number"
        />

    <EditText
        android:hint="Enter Your Phone Number"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/phone"
        android:id="@+id/getPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="250dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_below="@+id/getPhone"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Address"
        />

    <EditText
        android:hint="Enter Your Address"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/address"
        android:id="@+id/getAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="250dp"
        android:layout_marginTop="5dp"
        />

    <Button
        android:onClick="confirm"
        android:id="@+id/button"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/getAddress"
        android:text="Confirm"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>